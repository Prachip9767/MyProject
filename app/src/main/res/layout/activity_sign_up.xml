<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="MoneyManager.adapters.databases.interfaces.Ui.SignUpActivity">
    <TextView
        android:layout_marginStart="150dp"
        android:textColor="#ff355e"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:textColorHint="@color/white"
                android:background="#ff355e"
                android:id="@+id/etNameSignUp"
                style="@style/EditTextInput"
                android:hint="Enter Name" />

            <EditText
                android:textColorHint="@color/white"
                android:background="#ff355e"
                android:id="@+id/etEmailSignUp"
                style="@style/EditTextInput"
                android:hint="Enter Emailid" />

            <EditText
                android:textColorHint="@color/white"
                android:background="#ff355e"
                android:id="@+id/etAgeSignUp"
                style="@style/EditTextInput"
                android:hint="Enter Age"
                android:inputType="number" />

            <EditText
                android:textColorHint="@color/white"
                android:background="#ff355e"
                android:id="@+id/etPasswordSignUp"
                style="@style/EditTextInput"
                android:hint="Enter Password"
                android:inputType="textPassword" />

            <Button
                android:padding="20dp"
                android:layout_gravity="center"
                android:id="@+id/btnSignUp"
                android:background="#ff355e"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:text="Sign Up" />

            <Button

                android:id="@+id/btnGoToLogin"
                android:layout_width="match_parent"
                android:textColor="#ff355e"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:text="have an account login" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>